

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <a class="btn btn-info" href="/student/create"> add student</a>
                <div class="card-body">
                    <h2>all student </h2>
                    <hr>

                    <table class="table table-striped myTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>name</th>
                                <th>gmail</th>
                                <th>cell</th>
                                <th>location</th>
                                <th>photo</th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach( (item, index )=> { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %> </td>
                                    <td><%= item.name %> </td>
                                    <td><%= item.gmail %> </td>
                                    <td><%= item.cell %> </td>
                                    <td><%= item.location %> </td>
                                    <td>
                                        <% if (item.photo == 'avatar.png') { %>
                                            <img style="height:50px; width:50px" src="/images/<%= item.photo %>  " class="img-fluid rounded-top" alt="">
                                            <% } else { %>
                                                <img style="height:50px; width:50px" src="/images/student/<%= item.photo %>  " class="img-fluid rounded-top" alt="">
                                        <% } %>
                                    
                                        
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="/student/<%= item.id %> "><i class="bi bi-pencil-square"></i></a>
                                        <a href="#" class="btn btn-info"><i class="bi bi-yelp"></i></a>
                                        <a href="/student/delete/<%= item.id %>" class="btn btn-danger delete-btn"><i class="bi bi-archive"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                                
                        
                           
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>